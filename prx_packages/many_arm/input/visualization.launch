<launch>
  <include file="$(find prx_input)/templates/visualization/visualization.launch"/>

  <rosparam ns="visualization/viewer/">
    windows:
      window_1:
        xpos: 350
        ypos: 75
        width: 800
        height: 800
        cameras:
          perspective:
            ortho: false
            camera_type: 0
            eye: [-0.5, 0, 1.85]
            center: [0, 0, 1.75]
            speed: {move: 0.025, rotate: 0.002}
          orthographic:
            ortho: true
            ortho_param:
              left: -4
              right: 4
              bottom: -4
              top: 4
              zNear: 0
              zFar: 500
            speed: {move: 0.05, rotate: 0.001}
          smooth:
            ortho: false
            camera_type: 2
            eye: [-0.5, 0, 1.6]
            center: [0, 0, 1.6]
            speed: {move: 0.02, rotate: 0.002}
  </rosparam>

<rosparam ns="visualization/viewer/scene">
    line_thickness: 3
  </rosparam>

</launch>
