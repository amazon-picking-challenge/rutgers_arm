<launch>
  <arg name="visualize" default="true"/>
  <group if="$(arg visualize)">
    <arg name="vis_params" default="OSG_single_window.yaml"/>
    <rosparam command="load" file="$(find prx_input)/templates/visualization/$(arg vis_params)"/>

    <rosparam command="load" ns="/visualization/viewer/scene" file="$(find prx_input)/templates/visualization/basic_light.yaml"/>
    <rosparam command="load" ns="/visualization/viewer/scene" file="$(find prx_input)/templates/visualization/basic_materials.yaml"/>

    <rosparam ns="/visualization/viewer">
      line_thickness: 3
      windows:
        window_1:
          xpos: 920
          ypos: 100
          width: 1000
          height: 1000
          cameras:
            perspective:
              ortho: false
              camera_type: 0
              eye: [180, -50, 50]
              center: [80, -30, 10]
              speed: {move: 2, rotate: 0.001}
            orthographic:
              ortho: true
              ortho_param:
                left: -300
                right: 300
                bottom: -300
                top: 300
                zNear: 0
                zFar: 1000
              speed: {move: 10, rotate: 0.001}
            smooth:
              ortho: false
              camera_type: 2
              eye: [500, -20, 15]
              center: [500, 1, 18]
              speed: {move: 4, rotate: 0.001}
      scene:
        texture:
          -
            terrain:
              terrain_image: "terrain/blank.tga"
              terrain_plane: {x: 500, y: 500, z: -0.02, divisor: 2}
    </rosparam>

    
    <node name="visualization" pkg="prx_visualization" type="prx_visualization"
	  required="true" launch-prefix="" output="screen" args="visualization"/>
    
  </group>
</launch>
