<launch>
  <rosparam command="load" file="$(find prx_input)/templates/spaces/space_types.yaml"/>


  <rosparam ns="simulation" command="load" file="$(find cloud_manipulation)/input/parallel_simulation/sim.yaml" />

  <rosparam ns="simulation_slave_1" command="load" file="$(find cloud_manipulation)/input/parallel_simulation/sim.yaml" />

  <rosparam ns="simulation_slave_2" command="load" file="$(find cloud_manipulation)/input/parallel_simulation/sim.yaml" />

  <rosparam ns="simulation" command="load" >
    application:
      type: baxter_master_application
      name: simulation
      num_slaves: 2      
  </rosparam>

  <rosparam ns="simulation_slave_1" command="load">
    application:
      type: baxter_slave_application
      master: simulation
      slave_index: 1     
      num_slaves: 2 
  </rosparam>

  <rosparam ns="simulation_slave_2" command="load" >
    application:
      type: baxter_slave_application
      master: simulation
      slave_index: 2
      num_slaves: 2      
  </rosparam>
  

  <node name="simulation" pkg="prx_simulation" type="prx_simulation" required="true" launch-prefix="" output="screen" args="simulation"/>

  <node name="simulation_slave_1" pkg="prx_simulation" type="prx_simulation" required="true" launch-prefix="" output="screen" args="simulation_slave_1"/>

  <node name="simulation_slave_2" pkg="prx_simulation" type="prx_simulation" required="true" launch-prefix="" output="screen" args="simulation_slave_2"/>

 



 

  <include file="$(find prx_input)/templates/visualization/visualization.launch"/>

  <rosparam ns="visualization/viewer/">
    windows:
      window_1:
        xpos: 920
        ypos: 100
        width: 1000
        height: 1000
        cameras:
          perspective:
            ortho: false
            camera_type: 0
            eye: [0, 0, 2.8]
            center: [1, 0, 0]
            speed: {move: 0.1, rotate: 0.001}
          orthographic:
            ortho: true
            ortho_param:
              left: -300
              right: 300
              bottom: -300
              top: 300
              zNear: 0
              zFar: 1000
            speed: {move: 0.2, rotate: 0.001}
          smooth:
            ortho: false
            camera_type: 2
            eye: [0, -20, 15]
            center: [0, 1, 18]
            speed: {move: 0.2, rotate: 0.001}
  </rosparam>

</launch>
